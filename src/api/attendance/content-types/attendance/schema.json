{
  "kind": "collectionType",
  "collectionName": "attendances",
  "info": {
    "singularName": "attendance",
    "pluralName": "attendances",
    "displayName": "Attendance"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "student": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "classSession": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::class-session.class-session",
      "required": true
    },
    "subject": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subject.subject",
      "required": true
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "latitude": {
      "type": "decimal"
    },
    "longitude": {
      "type": "decimal"
    },
    "timestamp": {
      "type": "datetime"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "approved", "rejected"],
      "default": "pending"
    }
  }
}
